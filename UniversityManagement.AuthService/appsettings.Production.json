{
  "ConnectionStrings": {
    "AuthConnection": "Host=host.docker.internal;Port=5432;Database=university_auth;Username=your_user;Password=your_password;Include Error Detail=true"
  },
  "JwtSettings": {
    "SecretKey": "your-secret-key-here-minimum-32-characters-required",
    "Issuer": "UniversityManagement.AuthService",
    "Audience": "UniversityManagement.Services",
    "ExpirationInMinutes": 60
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "UniversityManagement.AuthService.Services": "Information"
    }
  },
  "AllowedHosts": "*"
}