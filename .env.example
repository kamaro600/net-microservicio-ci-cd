# Environment Mode
ASPNETCORE_ENVIRONMENT=Production

# Frontend Configuration
FRONTEND_API_URL=http://localhost:5000/api
FRONTEND_AUTH_URL=http://localhost:5063/api

COMPOSE_PROJECT_NAME=university-management
