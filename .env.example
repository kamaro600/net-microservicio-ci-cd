# Database Configuration
# Replace with your actual database connection strings
EXTERNAL_DB_CONNECTION_STRING=Host=your-db-host.com;Port=5432;Database=universidadbd;Username=your_user;Password=your_password;SSL Mode=Require;Pooling=true

# Auth Database Configuration
AUTH_DB_CONNECTION_STRING=Host=your-db-host.com;Port=5432;Database=university_auth;Username=your_user;Password=your_password;SSL Mode=Require;Pooling=true

# Configuraci√≥n BD Local (if using local PostgreSQL)
POSTGRES_DB=UniversidadBD
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin123

# JWT Secret Key
# Generate a strong random key for production
JWT_SECRET_KEY=your-secret-key-here-change-in-production

# RabbitMQ Configuration
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# SMTP Configuration
# Replace with your email service credentials
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
