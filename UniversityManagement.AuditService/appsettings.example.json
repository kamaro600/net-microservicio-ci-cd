{
  "ConnectionStrings": {
    "DefaultConnection": "Host=your-db-host;Port=5432;Database=UniversidadBD;Username=your_user;Password=your_password"
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "GroupId": "audit-service-consumer",
    "AuditTopic": "university.audit.events",
    "DeadLetterTopic": "university.audit.events.dlq",
    "AutoOffsetReset": "Earliest",
    "EnableAutoCommit": false,
    "SessionTimeoutMs": 6000,
    "HeartbeatIntervalMs": 3000,
    "MaxPollIntervalMs": 300000,
    "RetryCount": 3,
    "RetryDelayMs": 1000
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "SecretKey": "your-secret-key-here-minimum-32-characters-required",
    "Issuer": "UniversityManagement.AuthService",
    "Audience": "UniversityManagement.Services",
    "ExpirationInMinutes": 60
  }
}
